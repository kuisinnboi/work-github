<div class="container p-3 mx-auto my-3 py-3 bg-white">
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= render 'genre_searches/genre' ,genres: @genres %>
    </div>

    <div class="col-md-8">
      <h3>検索結果</h3>

      <div class="search-items d-flex flex-wrap">
        <% @items.each do |item| %>
        <div class="search-item mr-2">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.item_image, size: "200x150" %>
          <% end %>
          <p><%= link_to item.name, item_path(item.id) %></p>
          <p>¥<%= item.price %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>