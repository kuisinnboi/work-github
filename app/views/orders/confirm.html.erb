<div class="container my-5 bg-white">
  <h>注文情報確認</h>
    <div class="row">
      <div class="col-md-8">
        <table class="table">
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
           <% @cart_items.each do |cart_item| %>
           <tr>
             <td>
               <%= image_tag cart_item.item.item_image, size: "100x80" %>
               <strong><%= cart_item.item.name %></strong>
             </td>
             <td><%= (cart_item.item.price * 1.1).floor %></td>
             <td><%= cart_item.amount %></td>
             <td><%= (cart_item.item.price * 1.1).floor*cart_item.amount %></td>
            </tr>
      <% end %>
    </table>
    </div>

      <div class="col-md-4">
    <table class="table">
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>送料</td>
        <td><%= @shipping_fee %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= cart_item.subtotal %></td>
        <%= @subtotal += cart_item.subtotal %>
      </tr>
      <tr>
        <td>請求額</td>
        <td><%= @subtotal + @shipping_fee %></td>
      </tr>
      <% end %>
    </table>
  </div>
    </div>

    <div class = "row mt-5">
      <div class = "col-md-5">

        <table class = "table">
          <tr>
            <th>支払い方法</th>
            <td>
              <%= Order.payment_methods_i18n[@selected_pay_method] %>
            </td>
          </tr>
         <tr>
          <th>お届け先</th>
          <td>
          <%= "〒" + @order.post_code + " " + @order.address + " " + @order.name %>
          </td>
        </tr>
        </table>
      </div>
      </div>
          <%= form_with(model: @order, url: orders_path, method: :post)  do |f| %>

            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :post_code, value: @order.post_code %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <%= f.hidden_field :total_payment, value: @subtotal + @shipping_fee %>
            <%= f.hidden_field :shipping_cost, value: @shipping_fee %>
    <div class = "text-center">
        <%= submit_tag "注文を確定する", class: "btn btn-success" %>
      <% end %>
      </div>
</div>