<div class='container px-5 px-sm-0' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-5 offset-md-1'>
      <div style="background-color: #fff;">
        <h2>商品詳細</h2>
      </div>
      <div>
        <% if @item.item_image.attached? %>
          <%= image_tag @item.item_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'AdobeStock_123378894_Preview.jpeg', size: "400x400" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-5">
      <table class="table" style="margin-top: 60px; background-color: #fff;">
        <tr>
          <td>
            <h8>商品名</h8>
          </td>
          <td>
            <%= @item.name %>
          </td>
        </tr>
        <tr>
          <td>
            <h8>商品説明</h8>
          </td>
          <td>
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td>
            <h8>税抜き価格</h8>
          </td>
          <td>
            <%= @item.price %>
          </td>
        </tr>
        <tr>
          <td>
            <h8>ジャンル</h8>
          </td>
          <td>
            <%= @item.genre.name %>
          </td>
        </tr>
        <tr>
          <td>
            <h8>ステータス</h8>
          </td>
          <td>
            <% if @item.is_active %>
              <span class="text-success">販売中</span>
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
</div>
