<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @genre do |f| %>
      <h4>ジャンル名</h4>
        <span>
          <%= f.text_field :name ,:placeholder => "ジャンル名" %>
        </span>
      <% end %>
      <table class="table_index_items">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="button btn-outline-success">
              <%= link_to "編集する", edit_genre_path(genre.id) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
