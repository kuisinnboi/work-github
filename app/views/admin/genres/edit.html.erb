<div class='container my-5 bg-white' style="padding: 40px;">
  <div class='row d-flex justify-content-center'>
    <div class='col-md-10'>
      <div style=" margin-bottom-10px;">
        <h2>ジャンル一覧・追加</h2>
      </div>
      <div class="text-right" style="background-color: #fff; padding-top: 5px;">
        <div>
          <%= form_with model: @genre, url: admin_genre_path do |f| %>
            <%= f.label :name ,"ジャンル名" %>
            <%= f.text_field :name ,:placeholder => "ジャンル名" %>
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>