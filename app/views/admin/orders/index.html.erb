<div class='container px-5 px-sm-0' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding: 5px;">
        <h2 class="d-flex justify-content-start" style="width: fit-content; padding: 5px; border-radius:5px; background-color: #D76F6A; color: #fff;">注文履歴一覧</h2>

      </div>

      <table class="table" style="background-color: #fff;">
        <thead>
          <tr>
            <%= flash[:notice] %>
          </tr>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                <span class="text-success">販売中</span>
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <% if @total_pages > 1 %>
        <div class="m-auto">
          <div class="pagination d-flex justify-content-center">
            <div>
              <% (1..@total_pages).each do |page| %>
                <% if page == @current_page %>
                  <%= page %>

                <% else %>
                  <%= link_to page, admin_genres_path(page: page) %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
