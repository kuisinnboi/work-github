<div class='container my-5 bg-white' style="padding: 40px;">
  <div class='row d-flex justify-content-center'>
    <div class="col-md-10">
      <div class="d-flex justify-content-between">
        <h2>お客様詳細</h2>
        <div>
          <%= link_to "一覧に戻る", admin_customers_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
      <table class="table table-striped" style="margin-top: 20px; background-color: #fff;">
        <tr>
          <%= flash[:notice] %>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>会員ID</h8>
          </td>
          <td>
            <%= @customer.id %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>氏名</h8>
          </td>
          <td>
            <%= @customer.last_name %> <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>フリガナ</h8>
          </td>
          <td>
            <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>郵便番号</h8>
          </td>
          <td>
            <%= @customer.post_code %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>住所</h8>
          </td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>電話番号</h8>
          </td>
          <td>
            <%= @customer.telephone_number %>
          </td>
        </tr>
        <tr>
          <td class="table-warning">
            <h8>メールアドレス</h8>
          </td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>

        <tr>
          <td class="table-warning">
            <h8>会員ステータス</h8>
          </td>
          <td>
            <% if @customer.is_active %>
              <span class="text-success">有効</span>
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      </table>
      <div class="text-right">
        <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success mr-2" %>

        <%= link_to "注文一覧を見る", admin_home_path(@customer), class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
