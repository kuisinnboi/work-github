<div class='container my-5 bg-white' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding: 5px;">
        <h2 class="d-flex justify-content-start">注文履歴一覧</h2>
      </div>

      <div class = "my-3">
      <table class="table table-striped" style="background-color: #fff;">
        <thead>
          <tr>
            <%= flash[:notice] %>
          </tr>
          <tr class="table-warning">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

       <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order) %></td>
                    <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                    <td><%= order.order_details.sum(:amount) %></td>
                    <td>
                      <%= order.status_i18n %>
                      </td>
                      <%#= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
                  </tr>
                <% end %>
            </tbody>
        </table>

      </div>


    </div>
  </div>
</div>

