<div class='container my-5 bg-white' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding: 5px;">
        <h2 class="d-flex justify-content-start" style="width: fit-content; padding: 5px; border-radius:5px; background-color: #D76F6A; color: #fff;">注文履歴一覧</h2>
      </div>

      <table class="table table-striped" style="background-color: #fff;">
        <thead>
          <tr>
            <%= flash[:notice] %>
          </tr>
          <tr class="table-warning">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

       <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order) %></td>
                    <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                    <td><%= order.cart_items.sum(:quantity) %></td>
                    <td>
                      <%= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
                      <%= f.select :order_status, Order.order_statuses, class: "form-control" %>

                      <% end %>
                    </td>
                  </tr>
                <% end %>
            </tbody>
        </table>
      </table>


    </div>
  </div>
</div>

