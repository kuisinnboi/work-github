<div class='container px-5 px-sm-0' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding: 5px;">
        <h2 class="d-flex justify-content-start" style="width: fit-content; padding: 5px; border-radius:5px; background-color: #D76F6A; color: #fff;"><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h2>
      </div>

      <table class="table table-striped" style="background-color: #fff;">
        <thead>
          <tr>
            <%= flash[:notice] %>
          </tr>
          <tr class="table-warning">
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'),admin_order_path(order) %>
            </td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td>
              <%= order.status %>
            </td>
          </tr>
        <% end %>
      </table>
      <% if @total_pages > 1 %>
        <div class="m-auto">
          <div class="pagination d-flex justify-content-center">
            <div>
              <% (1..@total_pages).each do |page| %>
                <% if page == @current_page %>
                  <%= page %>
                <% else %>
                  <%= link_to page, admin_genres_path(page: page) %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
