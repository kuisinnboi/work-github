<div class="container my-5 bg-white">
  <div class="row bg-danger">
    <h3>会員情報編集</h3>
    <%= flash[:notice] %>
    <div class="bg-info">
      <<%= form_with model:@customer, local:true do |f| %>
        <div class="form-group">
          <%= f.label :last_name, "氏名" %>
          <%= f.text_field :last_name, class: "form-control last_name" %>
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name_kana, "フリガナ" %>
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
        </div>
        <div class="form-group">
          <%= f.label :post_code, "郵便番号" %>
          <%= f.text_field :post_code, class: "form-control post_code" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control address" %>
        </div>
        <div class="form-group">
          <%= f.label :telephone_number, "電話番号" %>
          <%= f.text_field :telephone_number, class: "form-control telephone_number" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
        <%= f.submit "編集内容を保存", class: 'btn btn-success text-white' %>
        <%= f.submit "退会する", class: 'btn btn-danger text-white' %>
     　 </div>
      <% end %>
    </div>
  </div>
</div>