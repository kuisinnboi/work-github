<div class="container my-5 p-5 bg-white ">
  <div class="row">
    <h2>配送先を編集する</h2>
  </div>
   <div class="row my-3">
 	<div class="col">
	 <%= form_with model: @address, url: update_addresses_path(@address.id), method: :patch do |f| %>
	 	<table class="table">
	 		<tr>
	 			<th class="table-warning"><%= f.label :"郵便番号（ハイフンなし）" %></th>
	 			<th><%= f.text_field :post_code, class: "form-control offset-1 col-10" %></th>
	 			<th></th>
	 			<th></th>
	 		</tr>

	    <tr>
	    	<th class="table-warning"><%= f.label :"住所" %></th>
	    	<th colspan="2"><%= f.text_field :address, class: "form-control offset-1 col-10"%></th>
	    	<th></th>

	    </tr>

			<tr>
				<th class="table-warning"><%= f.label :"宛名" %></th>
				<th><%= f.text_field :name, class: "form-control offset-1 col-10" %></th>
				<th></th>
				<th></th>
			</tr>
		</table>

		<div class="row text-center">
			<%= f.submit "変更内容を保存", class: "btn btn-sm btn-success mx-auto mt-3" %>
		</div>
	<% end %>
 </div>

</div>
</div>

