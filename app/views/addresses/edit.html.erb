<div class="container my-5 bg-white ">
  <div class="row">
    <h2>配送先を編集する</h2>
  </div>
   <div class="row mt-3">
 	<div class="col-4">
	 <%= form_with model: @address, url: update_addresses_path(@address.id), method: :patch do |f| %>
	 	<table class="table">
	 		<tr>
	 			<th><%= f.label :"郵便番号" %></th>
	 			<th><%= f.text_field :post_code %></th>
	 		</tr>

	    <tr>
	    	<th><%= f.label :"住所" %></th>
	    	<th><%= f.text_field :address%></th>
	    </tr>

			<tr>
				<th><%= f.label :"宛名" %></th>
				<th><%= f.text_field :name %></th>
			</tr>
		</table>

		<div class="row float-right">
			<%= f.submit "変更内容を保存", class: "btn btn-sm btn-success mx-auto mt-3" %>
		</div>
	<% end %>
 </div>

</div>
</div>
