<div class="container my-5 bg-white">
  <div class="row">
    <h2>配送先を編集する</h2>
  </div>
   <div class="row mt-3">
 	<div class="col-4">
	 <%= form_with model: @address, url: update_addresses_path(@address.id), method: :patch do |f| %>
	 	<div class="form-group">
			<%= f.label :"郵便番号" %>
			<%= f.text_field :post_code %>
		</div>

		<div class="form-group">
			<%= f.label :"住所" %>
			<%= f.text_field :address%>
		</div>

		<div class="form-group">
			<%= f.label :"宛名" %>


　　　　　　<%= f.text_field :name %>

		</div>

		<div class="row">
			<%= f.submit "編集する", class: "btn btn-outline-danger mx-auto mt-3" %>
		</div>
	<% end %>
 </div>

</div>
</div>
