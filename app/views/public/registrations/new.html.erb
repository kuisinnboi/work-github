<div class="container my-5 bg-white">

  <div class="mx-auto pt-5 bg-danger">
    <h3>新規会員登録</h3>
    <div class="bg-warning py-5 px-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class="row">
      <div class="col">名前</div>
      <div class="field col">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true, class: "last_name", placeholder:"令和" %>
      </div>
      <div class="field col">
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, autofocus: true, class: "first_name", placeholder:"道子" %>
      </div>
    </div>
    <div class="row">
      <div class="col">フリガナ</div>
      <div class="field col">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana", placeholder:"レイワ" %>
      </div>
      <div class="field col">
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana", placeholder:"ミチコ" %>
      </div>
    </div>

    <table class="teble">
      <tr>
        <td></td>
        <td>
          
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          
        </td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "email", placeholder:"sample@example.com" %>
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
        <td>
          <div class="field">
            <%= f.text_field :post_code, autofocus: true, class: "post_code", placeholder:"0000000" %>
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td>
          <div class="field">
            <%= f.email_field :address, autofocus: true, class: "address", placeholder:"東京都渋谷区代々木神園町0-0", size: 90 %>
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
        <td>
          <div class="field">
            <%= f.email_field :telephone_number, autofocus: true, class: "telephone_number", placeholder:"0000000000" %>
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード(6文字以上)" %></td>
        <td>
          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
        <td>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success text-white" %>
          </div>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
  </div>

  <div class="row mx-auto pt-5">
    <h3>既に登録済みの方</h3>
    <div class="mx-5 my-5">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>



