<div class="container py-5 overflow-hidden">
  <div class="row">
    <div class="col-lg-3  order-lg-1 order-2">
      <%= render 'genre_searches/genre' ,genres: @genres %>
    </div>
    <div class="col-lg-8 order-lg-2 order-1 grid gap-3 mx-3 bg-white">
      <h2>商品一覧</h2>
      <p>(全<%= @items.count %>件)</p>
      <div class="row d-flex justify-content-center">
        <% @items.each do |items| %>
        <div class="col-md-5 col-sm-12 p-3 m-1">
          <div class="text-center">
            <%= link_to item_path(items.id) do %>
              <%= image_tag items.item_image, size:'200x200' %>
            <% end %>
          </div>
          <div class="text-center"><%= link_to items.name, item_path(items.id) %></div>
          <div class="text-center">￥<%= (items.price * 1.1).floor %></div>
          <!--<div><%#= link_to "￥" + add_tax_price.to_s(:delimited), item_path %></div>-->
        </div>
        <% end %>
      </div>
      <%= will_paginate @items, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    </div>
  </div>
</div>