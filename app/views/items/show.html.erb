<div class="container my-5 py-5 bg-white">
  <div class="row">
    <div class="mx-auto col-lg-6 text-center">
      <%= image_tag @item.item_image, size:"300x300" %>
    </div>
    <div class="col-lg-6 py-5 text-start">
      <div>
        <div><h2><%= @item.name %></h2></div>
        <div><%= @item.introduction %></div>
        <div class="mt-5">￥<%= (@item.price * 1.1).floor %>(税込)</div>
      </div>
      <div class="mt-2">
        <table>
          <%= form_with model: @cart_items, url: cart_items_create, mesthod: :post do |f| %>
          <tr>
            <td><%= f.select :amount, [["1", "1"], ["2", "2"], ["3", "3"], ["4", "4"]], include_blank: "個数選択" %></td>
            <td><%= link_to "カートに入れる", cart_items_create_path, class: "btn btn-success text-white" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>