<div class="container my-5 py-5">
  <div class="row">
    <div class="col-lg-3  order-lg-1 order-3">
      <%= render 'genre_searches/genre' ,genres: @genres %>
    </div>
    <div class="mx-auto py-5 col-lg-5 text-center order-1 bg-white">
      <%= image_tag @item.item_image, size:"300x300" %>
    </div>
    <div class="col-lg-4 py-5 text-start order-2 bg-white">
      <div>
        <div><h2><%= @item.name %></h2></div>
        <div><%= @item.introduction %></div>
        <div class="mt-5">￥<%= (@item.price * 1.1).floor %>(税込)</div>
      </div>
      <div class="mt-2">
        <%= form_with model: @cart_items, url: cart_items_path, mesthod: :post do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <% if customer_signed_in? %>
        <table>
          <tr>
            <td><%= f.select :amount, [["1", "1"], ["2", "2"], ["3", "3"], ["4", "4"]], include_blank: "個数選択" %></td>
            <td><%= f.submit "カートに入れる",  class: "btn btn-success text-white" %></td>
          </tr>
        </table>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>